#include <iostream>

int main() {
    // Create an array of integers
    int arr[5] = {10, 20, 30, 40, 50};

    // Create a pointer to the array
    int* ptr = arr;

    // Display the values of the array using the pointer
    std::cout << "Values of the array using pointer:" << std::endl;
    for (int i = 0; i < 5; ++i) {
        std::cout << "Element " << i << ": " << *(ptr + i) << std::endl;
    }

    return 0;
}
